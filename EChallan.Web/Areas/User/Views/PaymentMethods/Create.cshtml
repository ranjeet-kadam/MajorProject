@model EChallan.Web.Models.PaymentMethod

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>PaymentMethod</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PaymentMethodName" class="control-label"></label>
                <input asp-for="PaymentMethodName" class="form-control" />
                <span asp-validation-for="PaymentMethodName" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="MethodEnabled" /> @Html.DisplayNameFor(model => model.MethodEnabled)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <select asp-for="Price" class ="form-control" asp-items="ViewBag.Price"></select>
            </div>
           <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
           @* <div class="btn btn-dark">
                <a asp-area="User" asp-controller="PaymentMethods" asp-action="Index2"> Proceed  </a>
            </div>*@
        </form>
    </div>
</div>

